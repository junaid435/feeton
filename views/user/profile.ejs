<%- include('../user/layouts/header.ejs') %>
    <style>
        /* Style the anchor tag */
        a.text-decoration-none {
            color: black;
            text-decoration: none;
            transition: color 0.3s;
        }

        /* Add hover effect */
        a.text-decoration-none:hover {
            color: #23527c;
        }

        .product_cartitem_pic img {
            height: 50px;
            width: 50px;
        }

        .product_cartitem_text h6,
        .product_cartitem_text h5 {
            font-size: 14px;
        }

        .breadcrumb-option {
            background-color: #f8f9fa;
            padding: 20px 0;
        }

        .breadcrumb__text h4 {
            font-size: 24px;
            color: #333;
            margin-bottom: 10px;
        }

        .breadcrumb__links a {
            color: #333;
        }

        .breadcrumb__links span {
            color: #777;
        }

        .card {
            border: none;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease-in-out;
        }

        .card:hover {
            transform: scale(1.02);
        }

        .card-body {
            padding: 20px;
        }

        .card-title {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .card-title::after {
            content: "";
            display: block;
            width: 40px;
            height: 2px;
            background-color: #ff6600;
            margin-top: 10px;
        }

        .row {
            margin-left: -15px;
            margin-right: -15px;
        }

        .col-lg-4,
        .col-lg-8 {
            padding-left: 15px;
            padding-right: 15px;
        }

        .rounded-circle {
            width: 150px;
            height: 150px;
        }

        .mb-3 {
            margin-bottom: 20px;
        }

        .list-group-item {
            padding: 20px;
            border: none;
        }

        .list-group-item:first-child {
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
        }

        .list-group-item:last-child {
            border-bottom-left-radius: 10px;
            border-bottom-right-radius: 10px;
        }

        .btn-primary {
            background-color: #ff6600;
            border-color: #ff6600;
            transition: background-color 0.3s ease-in-out;
        }

        .btn-primary:hover {
            background-color: #cc5500;
            border-color: #cc5500;
        }

        .card-body p {
            color: black;
        }

        .card-body p.mb-0 {
            color: #777;
        }
    </style>
    <title>User Profile</title>



    <!-- Main Content -->
    <section class="breadcrumb-option">
        <div class="container pt-5">
            <div class="row pt-5">
                <div class="col-lg-12">
                    <div class="breadcrumb__text pt-5">
                        <h4><i class="fas fa-user-circle"></i> Profile</h4>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section style="background-color: white">
        <div class="container py-5">
            <div class="row">
                <div class="col-lg-4">
                    <div class="card">
                        <div class="card-body">
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">
                                    <a href="#" class="text-decoration-none" onclick="toggleProfileForm()"><i
                                            class="fas fa-edit"></i> Edit Profile</a>
                                </li>
                                <li class="list-group-item">
                                    <a href="#" class="text-decoration-none" onclick="toggleOrders()"><i
                                            class="fas fa-file-alt"></i> Orders</a>
                                </li>
                                <li class="list-group-item">
                                    <a href="#" class="text-decoration-none" onclick="toggleAddress()"><i
                                            class="fas fa-map-marked-alt"></i> Manage Address</a>
                                </li>
                                <li class="list-group-item">
                                    <a href="/walletHistory" class="text-decoration-none"><i class="fas fa-wallet"></i>
                                        Wallet History</a>
                                </li>
                                <li class="list-group-item">
                                    <a href="/logout" class="btn btn-primary ml-3"><i class="fas fa-sign-out-alt"></i>
                                        Logout</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="col-lg-8">
                    <div class="card mb-4" id="userDetails">
                        <div class="card-body">
                            <h3 class="card-title">User Profile</h3>
                            <hr />
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0">Full Name:</p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="mb-0">
                                        <%=user.name%>
                                    </p>
                                </div>
                            </div>
                            <hr />
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0">Email:</p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="mb-0">
                                        <%=user.email%>
                                    </p>
                                </div>
                            </div>
                            <hr />
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0">Mobile:</p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="mb-0">
                                        <%=user.Phone%>
                                    </p>
                                </div>
                            </div>
                            <hr />
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0 mt-2">Actions:</p>
                                </div>
                                <div class="col-sm-9">
                                    <a href="/passwordChange?id=<%=user._id%>" class="btn btn-primary mr-2"><i
                                            class="fas fa-key"></i> Change
                                        Password</a>
                                    <a href="/addAddress" class="btn btn-primary"><i class="fas fa-plus"></i> Add
                                        Address</a>
                                </div>
                                <br><br>
                                <!-- Wallet Section -->
                                <div class="wallet style=" background-color: #ff8800; padding: 1.5rem; border-radius:
                                    0.25rem; color: #ffffff;"">
                                    <h2><i class="fas fa-wallet"></i> My Wallet</h2>
                                    <p><i class="fas fa-dollar-sign"></i> Balance: <%= user.wallet %>
                                    </p>
                                    <!-- Add more elements or information about the wallet here -->
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card mb-4" id="profileForm" style="display: none">
                        <div class="card-body">
                            <h5 class="card-title">Update Profile</h5>
                            <hr />name
                            <form action="/updateProfile" method="post">
                                <div class="form-group">
                                    <label for="firstName"><i class="fas fa-user"></i> First Name</label>
                                    <input type="text" class="form-control" name="name" id="firstName"
                                        value="<%=user.name%>" placeholder="Enter your first name" required>
                                </div>
                                <div class="form-group">
                                    <label for="email"><i class="fas fa-envelope"></i> Email</label>
                                    <input type="email" class="form-control" id="email" name="email" readonly
                                        value="<%=user.email%>" required>
                                </div>
                                <div class="form-group">
                                    <label for="mobile"><i class="fas fa-mobile-alt"></i> Mobile</label>
                                    <input type="text" class="form-control" id="mobile" name="phone"
                                        value="<%=user.Phone%>" placeholder="Enter your mobile number" required>
                                </div>
                                <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Save
                                    Changes</button>
                            </form>
                        </div>
                    </div>
                    <div class="card mb-4" id="addressDetails" style="display: none">
                        
                          <div id="AddressReloadDiv">
                            <div class="card-body">
                                <h5 class="card-title">Address Details</h5>
                                <div class="d-flex justify-content-end">
                                    <a href="/addAddress" class="btn btn-primary btn-sm"><i class="fas fa-plus"></i> Add
                                        New Address</a>
                                </div>
                                <% if (dataAddress && dataAddress.address ) { %>
                                    <% dataAddress.address.forEach((value,index)=>{%>
                                        <hr />
                                        <div class="row">
                                            <div class="col-sm-3">
                                                <p class="mb-0">Address:<%= index+1 %>
                                                </p>
                                            </div>
                                            <div class="col-sm-9">
                                                <p class="text-muted mb-0">Name: <%= value.fname%>
                                                        <%value.sname %>
                                                </p>

                                                <p class="text-muted mb-0">Housename: <%= value.housename %>
                                                </p>
                                                <p class="text-muted mb-0">City: <%= value.city %>
                                                </p>
                                                <p class="text-muted mb-0">State: <%= value.state %>
                                                </p>
                                                <p class="text-muted mb-0">district: <%= value.district %>
                                                </p>
                                                <p class="text-muted mb-0">Country: <%= value.country %>
                                                </p>
                                                <p class="text-muted mb-0">Email: <%= value.email %>
                                                </p>
                                                <p class="text-muted mb-0">Phone: <%=value.mobile %>
                                                </p>
                                                <p class="text-muted mb-0">Pin Code: <%=value.pin %>
                                                </p>
                                            </div>
                                        </div>

                                        <div class="row mt-3">
                                            <div class="col-sm-9 offset-sm-3">
                                                <a href="/edit-address?id=<%=value._id%>"
                                                    class="btn btn-primary btn-sm mr-2"><i class="fas fa-edit"></i>
                                                    Edit</a>
                                                <a onclick="removeAddress('<%=value._id%>')"
                                                    class="btn btn-danger btn-sm"><i class="fas fa-trash-alt"></i>
                                                    Remove</a>
                                            </div>
                                        </div>
                            </div>
                            <hr />
                            <% })%>
                                <% } else { %>
                                    <p>No address found.</p>
                                    <% } %>
                        </div>
                    </div>




                    <div class="card mb-4" id="orderDetails" style="display: none;">
                        <div class="card-body">
                            <h5 class="card-title">Order Details</h5>
                            <hr class="my-3">

                            <% if (order && order.length> 0) {
                                order.forEach((orderItem, index) => { %>
                                <div class="order-item mb-4">
                                    <div class="row">
                                        <div class="col-md-3 col-sm-4">
                                            <div class="order-icon">
                                                <i class="bi bi-calendar"></i>
                                            </div>
                                            <div class="order-label">
                                                <strong>Date</strong>
                                            </div>
                                            <div class="order-info">
                                                <%= orderItem.date.toLocaleString() %>
                                            </div>
                                        </div>
                                        <div class="col-md-3 col-sm-4">
                                            <div class="order-icon">
                                                <i class="bi bi-receipt"></i>
                                            </div>
                                            <div class="order-label">
                                                <strong>Order ID</strong>
                                            </div>
                                            <div class="order-info">
                                                <%= orderItem.orderID %>
                                            </div>
                                        </div>
                                        <div class="col-md-3 col-sm-4">
                                            <div class="order-icon">
                                                <i class="bi bi-cash-stack"></i>
                                            </div>
                                            <div class="order-label">
                                                <strong>Grand Total</strong>
                                            </div>
                                            <div class="order-info">
                                                â‚¹ <%= orderItem.totalAmount %>
                                            </div>
                                        </div>
                                        <div class="col-md-3 col-sm-4">
                                            <div class="order-icon">
                                                <i class="bi bi-truck"></i>
                                            </div>
                                            <div class="order-label">
                                                <strong>Delivery Date</strong>
                                            </div>
                                            <div class="order-info">
                                                <%= orderItem.expectedDelivery.toLocaleString() %>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row mt-3">
                                        <div class="col-md-3 col-sm-4">
                                            <div class="order-icon">
                                                <i class="bi bi-credit-card"></i>
                                            </div>
                                            <div class="order-label">
                                                <strong>Payment Method</strong>
                                            </div>
                                            <div class="order-info">
                                                <%= orderItem.payment %>
                                            </div>
                                        </div>
                                        <div class="col-md-9 col-sm-8">
                                            <div class="order-icon">
                                                <i class="bi bi-house-door"></i>
                                            </div>
                                            <div class="order-label">
                                                <strong>Address</strong>
                                            </div>
                                            <div class="order-info">
                                                <%= orderItem.deliveryAddress %>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row mt-3">
                                        <div class="col-md-12">
                                            <a class="btn btn-primary" href="/Order_view?id=<%=orderItem.orderID%>">View
                                                Order</a>
                                            <a class="d-flex justify-content-end"
                                                href="/invoice?orderId=<%=orderItem._id  %>"
                                                class="invoice-btn">Download Invoice</a>
                                        </div>
                                    </div>
                                </div>
                                <hr class="my-4">
                                <% }); }else{%>
                                    <p>No Orders found.</p>
                                    <%} %>
                        </div>
                    </div>





                </div>
            </div>
        </div>
    </section>

    <!-- JavaScript dependencies (jQuery, Popper.js, Bootstrap JS) -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>

    <script>
        function toggleProfileForm() {
            var orderDetails = document.getElementById('orderDetails');
            var profileForm = document.getElementById("profileForm");
            var userDetails = document.getElementById("userDetails");
            var addressDetails = document.getElementById("addressDetails");

            if (profileForm.style.display === "none") {
                profileForm.style.display = "block";
                userDetails.style.display = "none";
                addressDetails.style.display = "none";
                orderDetails.style.display = "none";
            } else {
                profileForm.style.display = "none";
                userDetails.style.display = "block";
            }
        }

        function toggleAddress() {
            var orderDetails = document.getElementById('orderDetails');
            var userDetails = document.getElementById("userDetails");
            var addressDetails = document.getElementById("addressDetails");
            var profileForm = document.getElementById("profileForm");
            if (addressDetails.style.display === "none") {
                addressDetails.style.display = "block";
                userDetails.style.display = "none";
                profileForm.style.display = "none";
                orderDetails.style.display = "none";
            } else {
                addressDetails.style.display = "none";
                userDetails.style.display = "block";
            }
        }

        function toggleOrders() {
            var orderDetails = document.getElementById('orderDetails');
            var userDetails = document.getElementById("userDetails");
            var addressDetails = document.getElementById("addressDetails");
            var profileForm = document.getElementById("profileForm");
            if (orderDetails.style.display === "none") {
                orderDetails.style.display = "block";
                userDetails.style.display = "none";
                addressDetails.style.display = "none";
                profileForm.style.display = "none";
            } else {
                orderDetails.style.display = "none";
                userDetails.style.display = "block";
            }
        }
    </script>


    <script>
        const name = document.getElementById('firstName')
        const mobile = document.getElementById('mobile')

        name.addEventListener("input", () => {
            if (name.value.trim() == "") {
                name.setCustomValidity("please enter the name")
            }
            else {
                name.setCustomValidity("")
            }

        })

        mobile.addEventListener("input", () => {

            if (!mobile.value.match(/^\d+$/)) {
                mobile.setCustomValidity('please enter the Number')
            }
            else {
                mobile.setCustomValidity('')
            }

        })


        function removeAddress(id) {
            $.ajax({
                url: '/remove_address',
                method: 'delete',
                data: {
                    id
                }, success: (response) => {
                    if (response.RemoveSuccess === true) {
                        $('#AddressReloadDiv').load('/profile #AddressReloadDiv')
                    } else {
                        Swal.fire({
                            title: "Error",
                            icon: 'error',
                            text: response.message,
                            timer: 2000
                        })
                    }
                }

            })
        }
    </script>

    </html>




